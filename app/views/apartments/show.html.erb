        <td><%= Apartment.find(apartment[1]).price %></td>
        <td><%= Apartment.find(apartment[1]).latitude %></td>
        <td><%= Apartment.find(apartment[1]).longitude %></td>
      </tr>
    <% end %>
  </tbody>
</table>

